<div class='container'>
  <div class='row'>
    <div class='col-md-8 mt-4 mx-auto'>
      <h3>Đăng khóa học</h3>
      <form class='mt-4' method='POST' action='/courses/store'>
        <div class='form-group'>
          <label for='name'>Tên khóa học</label>
          <input type='text' class='form-control' id='name' name='name' autocomplete='off' />
        </div>

        <div class='form-group'>
          <label for='description'>Mô tả khoá học</label>
          <textarea
            type='text'
            class='form-control'
            id='description'
            name='description'
            autocomplete='off'
          ></textarea>
        </div>

        <div class='form-group'>
          <label for='videoId'>Video ID</label>
          <input type='text' class='form-control' id='videoId' name='videoId' autocomplete='off' />
        </div>

        <div class='form-group'>
          <label for='level'>Trình độ</label>
          <input type='text' class='form-control' id='level' name='level' autocomplete='off' />
        </div>

        <button type='submit' class='btn btn-primary'>Thêm khóa học</button>
      </form>
    </div>
  </div>
</div>